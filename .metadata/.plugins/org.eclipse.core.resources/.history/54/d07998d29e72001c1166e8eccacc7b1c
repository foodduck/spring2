<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper">
	<!-- 목록 조회 -->
	<select id="" resultType="">
		select * from mp_board
	</select>
	<!-- 해당 글 조회 -->
		<select id="" resultType="">
		select * from mp_board where bno = ${bno}
	</select>
	<!-- 글 등록 -->
		<insert id="" >
			insert into mp_board values(mp_board_seq.nextval, ${title}, ${content}, ${writer}, sysdate, 0)
		</insert>
	<!-- 글 수정 -->
		<update id="">
			update mp_board set title=${title} content=${content} writer={writer} where bno=${bno}
		</update>
	<!-- 글 삭제 -->
		<delete id="">
			delete from mp_board where bno=${bno}
		</delete>
		
</mapper>