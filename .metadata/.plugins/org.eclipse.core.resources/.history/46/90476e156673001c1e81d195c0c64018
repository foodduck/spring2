<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">
	<!-- 회원목록 조회 -->
	<select id="memberList" resultType="kr.co.vo.MemberVO">
		select userid, userpass, email, username, regdate from mp_member order by regdate desc
	</select>
	<!-- 상세회원 조회 -->
	<select id="memberView" resultType="kr.co.vo.MemberVO" parameterType="kr.co.vo.MemberVO">
		select  userid, userpass, email, username, regdate from mp_member where userid = #{userid}
	</select>
	<!-- 회원 등록 -->
	<insert id="memberInsert" parameterType="kr.co.vo.MemberVO">
		insert into mp_member values (#{userid}, #{userpass}, #{email}, #{username}, sysdate)
	</insert>
	<!-- 회원 정보 수정 -->
	<update id="memberUpdate" parameterType="kr.co.vo.MemberVO">
		update mp_member set userpass=#{userpass} email=#{email} #{username} where userid=#{userid}
	</update>
	<!-- 회원 제거/탈퇴 -->
	<delete id="memberDelete" parameterType="kr.co.vo.MemberVO">
		delete from mp_member where userid=#{userid}
	</delete>
</mapper>