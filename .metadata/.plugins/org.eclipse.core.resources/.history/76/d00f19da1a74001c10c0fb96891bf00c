package kr.co.dao;

import java.util.List;

import kr.co.vo.MemberVO;

public interface MemberDAO {
	
	//회원목록 조회	sql.memberList() MemberVO
	public List<MemberVO> memberList() throws Exception;
	
	//상세회원 조회(관리자)	sql.adminMemberView(MemberVO memberVO) MemberVO
	public MemberVO adminMemberView(MemberVO memberVO) throws Exception;
	
	//상세회원 조회(회원)	sql.memberView()
	public MemberVO memberList(MemberVO memberVO) throws Exception;
	
	//회원 등록	sql.memberInsert()
	public List<MemberVO> memberList(MemberVO memberVO) throws Exception;
	
	//회원정보 수정	sql.memberUpdate()
	public List<MemberVO> memberList(MemberVO memberVO) throws Exception;
	
	//회원 제거/탈퇴	sql.memberDelete()
	public List<MemberVO> memberList(MemberVO memberVO) throws Exception;
	
	//로그인	sql.memberLogin()
	public List<MemberVO> memberList(MemberVO memberVO) throws Exception;
	
	//패스워드 체크
	public int memberCheckPw() throws Exception;
	
	//아이디 중복 체크
	public int memberCheckId() throws Exception;
	
}
