<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">
	<!-- 회원목록 조회 -->
	<select id="" resultType="kr.co.vo.MemberVO">
		select * from mp_member
	</select>
	<!-- 상세회원 조회 -->
	<select id="" resultType="kr.co.vo.MemberVO">
		select * from mp_member where userid = #{userid}
	</select>
	<!-- 회원 등록 -->
	<insert id="">
		insert into mp_member values (#{userid}, #{userpass}, #{email}, 
		#{username}, sysdate)
	</insert>
	<!-- 회원 정보 수정 -->
	<update id="">
		update mp_member set userpass=#{userpass} email=#{email} #{username} where userid=#{userid}
	</update>
	<!-- 회원 제거/탈퇴 -->
	<delete id="">
		delete from mp_member where userid=#{userid}
	</delete>
</mapper>